import java.util.Arrays;

public class MajorityElement {

    public int majorityElement(int[] nums) {
        int candidate = 0;
        int count = 0;
        
        for (int num : nums) {
            if (count == 0) {
                candidate = num;
            }
            
            if (num != candidate) {
                count--;
            } else {
                count++;
            }
        }
        
        return candidate;
    }

    public static void main(String[] args) {
        MajorityElement solution = new MajorityElement();

        int[] input1 = {3, 2, 3};
        System.out.println("Test Case 1: " + solution.majorityElement(input1));
        
        int[] input2 = {2, 2, 1, 1, 1, 2, 2};
        System.out.println("Test Case 2: " + solution.majorityElement(input2));
      
    }
}
