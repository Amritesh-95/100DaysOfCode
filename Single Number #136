import java.util.Arrays;

public class SingleNumber {

    public int singleNumber(int[] nums) {
        int ans = 0; // 0 is the safe starting point for XOR
        
        for(int num : nums) {
            ans = ans ^ num; // Accumulate the XOR
        }
        
        return ans;
    }

    public static void main(String[] args) {
        SingleNumber solution = new SingleNumber();

        int[] input1 = {2, 2, 1};
        System.out.println("Test Case 1: " + solution.singleNumber(input1));
        
        int[] input2 = {4, 1, 2, 1, 2};
        System.out.println("Test Case 2: " + solution.singleNumber(input2));
    }
}
